{
  "name": "document",
  "displayName": "AI Doc Writer for Typescript and Javascript",
  "description": "The AI generated documentation writer",
  "icon": "img/icon.png",
  "version": "1.0.1",
  "publisher": "mintlify",
  "repository": {
		"url": "https://github.com/mintlify/vscode-docs"
	},
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:docs.write"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docs.write",
        "title": "Generate Documentation"
      }
    ],
    "keybindings": [
      {
        "command": "docs.write",
        "key": "cmd+.",
        "mac": "cmd+.",
        "win": "ctrl+.",
        "when": "editorLangId =~ /typescript|javascript|c/"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && editorLangId =~ /typescript|javascript|c/",
          "command": "docs.write"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mintdocs",
          "title": "Generate Documentation (⌘.)",
          "icon": "img/outline.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "docs",
        "contents": "[✍️ Generate Docs (⌘.)](command:docs.write)\nHave questions? Join our [community](https://discord.gg/6W7GuYuxra)"
      }
    ],
    "views": {
      "mintdocs": [
        {
          "id": "docs",
          "name": "Generate documentation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "publish": "npm run package && vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "vsce": "^2.5.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "axios": "^0.24.0"
  }
}
